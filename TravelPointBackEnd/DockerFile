# Use official Golang image
FROM golang:1.21

# Set working directory
WORKDIR /app

# Copy go.mod and go.sum, then download dependencies
COPY go.mod go.sum ./
RUN go mod download

# Copy the source code
COPY . .

# Build the application
RUN go build -o main .

# Expose API port
EXPOSE 8080

# Run the application
CMD ["./main"]
